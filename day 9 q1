#include<stdio.h>
#include<math.h>
int main()
{
    float a,b,c,D,root1,root2,real,imaginary;
    printf("enter values of a,b,c");
    scanf("%f%f%f",&a,&b,&c);
    D=b*b-4*a*c;
    if(D>0)
    {
        root1= (-b+sqrt(D))/2*a;
        root2= (-b-sqrt(D))/2*a;
        printf("roots are real and different %f,%f",root1,root2);
    }
    else if(D=0)
    {
        root1=-b/2*a;
        root2=root1;
        printf("roots are real and equal %f%f",root1,root2);
    }
    else
    {
        real=-b/2*a;
        imaginary=sqrt(-D)/2*a;
        printf("roots are complex %.2f+%.2fi and %.2f-%.2fi",real,imaginary,real,imaginary);
    }
    return 0;
